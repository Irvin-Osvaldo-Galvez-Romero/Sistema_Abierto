# ===========================================
# CONFIGURACIÓN DEL SISTEMA UNIVERSITARIO
# ===========================================

# Base de datos PostgreSQL
DB_PASSWORD=your_secure_db_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sistema_universitario

# Redis para caché y sesiones
REDIS_PASSWORD=your_secure_redis_password_here

# JWT para autenticación
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# Clave de cifrado para datos sensibles
ENCRYPTION_KEY=your_32_character_encryption_key_here

# MinIO (S3 compatible) para almacenamiento
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

# Grafana para monitoreo
GRAFANA_PASSWORD=your_grafana_admin_password

# Configuración de email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@universidad.edu.mx

# Configuración de la aplicación
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000

# Configuración de SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Configuración de logs
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# Configuración de backup
BACKUP_SCHEDULE=0 2 * * *  # Diario a las 2:00 AM
BACKUP_RETENTION_DAYS=30

# Configuración de seguridad
SESSION_TIMEOUT=1800  # 30 minutos en segundos
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900  # 15 minutos en segundos

# Configuración de archivos
MAX_FILE_SIZE=10485760  # 10MB en bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Configuración de blockchain (opcional)
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_PRIVATE_KEY=your_blockchain_private_key
BLOCKCHAIN_CONTRACT_ADDRESS=your_smart_contract_address

# Configuración de monitoreo
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ELASTICSEARCH_ENABLED=true

# Configuración de desarrollo (solo para desarrollo)
DEBUG=false
HOT_RELOAD=false
