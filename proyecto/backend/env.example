# ===========================================
# CONFIGURACIÓN DEL SISTEMA UNIVERSITARIO
# ===========================================

# Configuración del servidor
NODE_ENV=development
PORT=3001
HOST=localhost

# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/sistema_universitario?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sistema_universitario
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis para caché y sesiones
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT para autenticación
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Clave de cifrado para datos sensibles
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Configuración de email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@universidad.edu.mx

# Configuración de archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Configuración de logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Configuración de seguridad
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Configuración de desarrollo
DEBUG=false
HOT_RELOAD=true
